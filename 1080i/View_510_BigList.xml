                                <font>font14</font>
                                <textcolor>grey2</textcolor>
                            </control>
                            <control type="textbox">
                                <top>95</top>
                                <width>1330</width>
                                <height>108</height>
                                <label>$VAR[BigListPlotVar]</label>
                                <autoscroll>false</autoscroll>
                                <font>font14_textbox</font>
                                <textcolor>grey</textcolor>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1808" height="217">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1725</width>
                            <height>217</height>
                            <texture border="5">separator2.png</texture>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1725</width>
                            <height>217</height>
                            <texture>listselect_fo.png</texture>
                            <visible>Control.HasFocus(510)</visible>
							<include>VisibleFadeEffect</include>
                        </control>
                        <include>BigList_Landscape</include>
                        <control type="group">
                            <left>375</left>
                            <top>10</top>
                            <control type="group">
                                <control type="label">
                                    <width>1330</width>
                                    <height>50</height>
                                    <label>$INFO[ListItem.Label]</label>
                                    <font>font16_title_bold</font>
                                </control>
                                <control type="label">
                                    <top>45</top>
                                    <width>980</width>
                                    <height>50</height>
                                    <label>$VAR[BigListInfoVar]</label>
                                    <aligny>center</aligny>
                                    <font>font14</font>
                                    <textcolor>grey</textcolor>
                                </control>
                                <control type="label">
                                    <top>45</top>
                                    <width>1330</width>
                                    <height>50</height>
                                    <label>$VAR[BigListInfoVar2]</label>
                                    <align>right</align>
                                    <aligny>center</aligny>
                                    <font>font14</font>
                                    <textcolor>grey</textcolor>
                                </control>
                                <control type="textbox">
                                    <top>95</top>
                                    <width>1330</width>
                                    <height>108</height>
                                    <label>$VAR[BigListPlotVar]</label>
                                    <font>font14_textbox</font>
                                    <autoscroll time="3500" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
                                </control>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="60">
                    <left>1725</left>
                    <top>151</top>
                    <width>12</width>
                    <height>868</height>
                    <onup>60</onup>
                    <ondown>60</ondown>
                    <onleft>510</onleft>
                    <onright>SetProperty(MediaMenu,True,home)</onright>
                    <onright>SetFocus(9050)</onright>
                    <texturesliderbackground>-</texturesliderbackground>
                    <texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
                    <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                    <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
                </control>
            </control>
        </control>
	</include>
 
