<?xml version="1.0" encoding="UTF-8"?>
<window id="1134" type="dialog">
	<visible>VideoPlayer.IsFullscreen + Player.Paused + [[!Skin.HasSetting(netflix2secs) + !Skin.HasSetting(netflix5secs) + !Skin.HasSetting(netflix10secs) + System.IdleTime(2)] | [Skin.HasSetting(netflix2secs) + System.IdleTime(2)] | [Skin.HasSetting(netflix5secs) + System.IdleTime(5)] | [Skin.HasSetting(netflix10secs) + System.IdleTime(10)]] + !Skin.HasSetting(Disable.Netflix.Pause)</visible>
	<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
	<visible>!System.HasModalDialog</visible>
	<controls>
		<control type="image">
			<include>FullscreenDimensions</include>
			<colordiffuse>AAFFFFFF</colordiffuse>
			<texture border="1">black.png</texture>
			<animation effect="fade" time="600">WindowOpen</animation>
			<animation effect="fade" time="600">WindowClose</animation>
		</control>
		<control type="grouplist">
			<left>220</left>
			<top>250</top>
			<width>1720</width>
			<height>600</height>
			<usecontrolcoords>true</usecontrolcoords>
			<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="150" end="100" center="400,540" time="300" tween="cubic" easing="out" />
				<effect type="fade" end="100" time="150" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="100" delay="100" />
				<effect type="zoom" start="100" end="130" center="400,540" time="200" tween="cubic" easing="in" />
			</animation>
			<control type="label">
				<width>1720</width>
				<height>60</height>
				<font>font14_title</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>labelheader</textcolor>
				<label>$LOCALIZE[31167]</label>
			</control>
			<control type="image">
				<left>15</left>
				<width>1690</width>
				<height>200</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>$INFO[Player.Art(clearlogo)]</texture>
				<visible>!String.IsEmpty(Player.Art(clearlogo))</visible>
			</control>
			<control type="image">
				<left>15</left>
				<width>1690</width>
				<height>200</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>$INFO[Player.Art(tvshow.clearlogo)]</texture>
				<visible>!String.IsEmpty(Player.Art(tvshow.clearlogo))</visible>
			</control>
			<control type="textbox">
				<left>15</left>
				<width>1690</width>
				<height>auto</height>
				<font>WeatherTemp</font>
				<textcolor>grey</textcolor>
				<label>$INFO[Player.Title]</label>
				<visible>VideoPlayer.Content(movies) + String.IsEmpty(Player.Art(clearlogo))</visible>
			</control>
			<control type="textbox">
				<left>15</left>
				<width>1690</width>
				<height>auto</height>
				<font>WeatherTemp</font>
				<textcolor>grey</textcolor>
				<label>$INFO[VideoPlayer.TvShowTitle]</label>
				<visible>VideoPlayer.Content(episodes) + String.IsEmpty(Player.Art(tvshow.clearlogo))</visible>
			</control>
			<control type="group">
				<height>60</height>
				<visible>VideoPlayer.Content(movies)</visible>
				<control type="image">
					<left>10</left>
					<top>-4</top>
					<width>180</width>
					<height>70</height>
					<aspectratio>keep</aspectratio>
					<colordiffuse>grey</colordiffuse>
					<texture fallback="flags/rating/0.0.png">$INFO[VideoPlayer.Rating,flags/rating/,.png]</texture>
					<visible>String.IsEmpty(VideoPlayer.UserRating)</visible>
				</control>
				<control type="image">
					<left>10</left>
					<top>-4</top>
					<width>180</width>
					<height>70</height>
					<aspectratio>keep</aspectratio>
					<colordiffuse>themecolor</colordiffuse>
					<texture>$INFO[VideoPlayer.UserRating,flags/rating/,.png]</texture>
					<visible>!String.IsEmpty(VideoPlayer.UserRating)</visible>
				</control>
				<control type="label">
					<left>210</left>
					<width>1720</width>
					<height>60</height>
					<font>font15</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<label>$INFO[VideoPlayer.Year]$INFO[VideoPlayer.MPAA,      ]$INFO[VideoPlayer.Duration(H),      , $LOCALIZE[31168]]$INFO[VideoPlayer.Duration(MM), , $LOCALIZE[31169]]</label>
				</control>
			</control>
			<control type="label">
				<width>1720</width>
				<height>60</height>
				<font>font15</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>grey</textcolor>
				<label>[B]$INFO[VideoPlayer.Season,$LOCALIZE[20373] ,: ]$INFO[VideoPlayer.Episode,$LOCALIZE[20359] ][/B]</label>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="label">
				<width>1720</width>
				<height>60</height>
				<font>font15</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>grey</textcolor>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="textbox">
				<left>15</left>
				<width>860</width>
				<height>350</height>
				<font>font14_plot</font>
				<textcolor>grey</textcolor>
				<label>$INFO[VideoPlayer.PlotOutline]</label>
				<visible>!String.IsEmpty(VideoPlayer.PlotOutline) + !String.IsEqual(VideoPlayer.PlotOutline,N/A)</visible>
			</control>
			<control type="textbox">
				<left>15</left>
				<width>1400</width>
				<height>350</height>
				<font>font14_plot</font>
				<textcolor>grey</textcolor>
				<label>$INFO[VideoPlayer.Plot]</label>
				<visible>String.IsEmpty(VideoPlayer.PlotOutline) | String.IsEqual(VideoPlayer.PlotOutline,N/A)</visible>
			</control>
		</control>
	</controls>
</window>