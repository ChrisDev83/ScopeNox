<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video : InfoWall -->
	<include name="View_513_Flix">
		<control type="group">
			<visible>Control.IsVisible(513) + !Window.IsActive(addoninformation)
			</visible>
			<include>ViewAnimation</include>
			<top>15</top>
			
			
			
			
			<control type="group">
				<left>20</left>
				<top>170</top>
				<control type="group">
					<top>-100</top>
					<left>630</left>
					<width>1280</width>
					<height>800</height>
					<control type="image">
						<top>100</top>
						<aspectratio aligny="top">scale</aspectratio>
						<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
						<animation effect="slide" start="0,-80" end="0,-200" pulse="true" time="12000" condition="[!IsEmpty(ListItem.Art(fanart)) + StringCompare(Control.GetLabel(4421),1)]">Conditional</animation>
						<animation effect="slide" end="0,-80" time="0" condition="[!IsEmpty(ListItem.Art(fanart)) + StringCompare(Control.GetLabel(4421),2)]">Conditional</animation>
					</control>
					<control type="image">
						<left>-10</left>
						<aspectratio>keep</aspectratio>
						<height>1000</height>
						<texture background="true">overlays/posteroverlay.png</texture>
						<fadetime>400</fadetime>
					</control>
				</control>
				
				<control type="label">
					<visible>IsEmpty($INFO[ListItem.Art(clearlogo)])</visible>
					<top>80</top>
					<width>640</width>
					<height>60</height>
					<font>font16_title_bold</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>$VAR[FloorLabelVar]</label>
					<textoffsetx>15</textoffsetx>
					<wrapmultiline>true</wrapmultiline>
				</control>
				
				<control type="label">
					<visible>!IsEmpty(ListItem.Art(clearlogo))</visible>
					<top>140</top>
					<width>640</width>
					<height>60</height>
					<font>font11</font>
					<textcolor>FF0088FF</textcolor>
					<shadowcolor>FF0026FF</shadowcolor>
					<scroll>true</scroll>
					<label>$VAR[FloorLabelVar] ($INFO[ListItem.Year])</label>
					<textoffsetx>15</textoffsetx>
				</control>
				
				<control type="image">
					<left>100</left>
					<top>0</top>
					<width>390</width>
					<height>150</height>
					<aspectratio aligny="middle">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
					<animation effect="fade" start="10" end="100" time="160" tween="cubic" easing="inout" condition="true">Conditional</animation>
				</control>

				<control type="group">
					<top>178</top>
					<left>15</left>
					<control type="label">
						<width>100</width>
						<height>60</height>
						<font>font10</font>
						<textcolor>FF00B7FF</textcolor>
						<label>Director : </label>
					</control>
					
					<control type="button">
						<left>70</left>
						<width>540</width>
						<font>font10</font>
						<label>$INFO[ListItem.Director]</label>
					</control>
				</control>
				
				<control type="group">
					<top>208</top>
					<left>15</left>
					<control type="label">
						<width>100</width>
						<height>60</height>
						<font>font10</font>
						<textcolor>FF00B7FF</textcolor>
						<label>Genre : </label>
					</control>
					
					<control type="button">
						<left>70</left>
						<width>540</width>
						<font>font10</font>
						<label>$INFO[ListItem.Genre]</label>
					</control>
				</control>
				
				<control type="group">
					<top>238</top>
					<left>15</left>
					<control type="label">
						<width>100</width>
						<height>60</height>
						<font>font10</font>
						<textcolor>FF00B7FF</textcolor>
						<label>Rating : </label>
					</control>
					
					<control type="button">
						<left>70</left>
						<width>540</width>
						<font>font10</font>
						<label>$INFO[ListItem.Rating] ($INFO[ListItem.Votes] votes)</label>
					</control>
				</control>

				<control type="group">
					<top>268</top>
					<left>15</left>
					<control type="label">
						<width>100</width>
						<height>60</height>
						<font>font10</font>
						<textcolor>FF00B7FF</textcolor>
						<label>Aspect : </label>
					</control>
					
					<control type="button">
						<visible>!IsEmpty(ListItem.VideoAspect)</visible>
						<left>70</left>
						<width>540</width>
						<font>font10</font>
						<label>$INFO[ListItem.VideoAspect]</label>
					</control>
					<control type="button">
						<visible>IsEmpty(ListItem.VideoAspect)</visible>
						<left>70</left>
						<width>540</width>
						<font>font10</font>
						<label>$INFO[Skin.String(Flix.Movies.InfoPanel)]</label>
						<label condition="!IsEmpty(ListItem.VideoAspect)">$INFO[ListItem.VideoAspect]</label>
					</control>
					<control type="button">
						<visible>!IsEmpty(ListItem.VideoAspect)</visible>
						<left>70</left>
						<width>540</width>
						<font>font10</font>
						<label>$INFO[ListItem.VideoAspect]</label>
					</control>
				</control>





				<control type="textbox">
					<label>$VAR[VideoPlotVar]</label>
					<top>320</top>
					<left>15</left>
					<width>600</width>
					<height>250</height>
					<font>font13</font>
					<autoscroll time="3000" delay="5" repeat="5000">Skin.HasSetting(Enable.AutoScroll)
						+ !Control.HasFocus(61)</autoscroll>
					<pagecontrol>61</pagecontrol>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
			</control>
			
			
			
			
			
			
			
			
			<control type="fixedlist" id="513">
				<left>28</left>
				<top>688</top>
				<width>1880</width>
				<height>200</height>
				<onup condition="Control.IsVisible(61)">61</onup>
				<onup condition="!Control.IsVisible(61)">SetProperty(MediaMenu,True,home)</onup>
				<onup condition="!Control.IsVisible(61)">SetFocus(9050)</onup>
				<onright>513</onright>
				<onleft>513</onleft>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="Flix">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">400</scrolltime>
				<visible>Container.Content(movies)
				</visible>
				<orientation>horizontal</orientation>
				<itemlayout height="190" width="126">
					<control type="image">
						<width>113</width>
						<height>170</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[PosterThumb]</texture>
						<fadetime>400</fadetime>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
						<colordiffuse>BAffffff</colordiffuse>
					</control>
					<control type="image">
						<top>173</top>
						<width>113</width>
						<height>170</height>
						<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
						<texture background="true" flipy="true">$VAR[PosterThumb]</texture>
						<animation effect="fade" start="100" end="30" time="400">Focus</animation>
						<animation effect="fade" start="30" end="100" time="400">UnFocus</animation>
					</control>
					<control type="image">
						<left>80</left>
						<top>1</top>
						<width>34</width>
						<height>34</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>1</bordersize>
					</control>
					<control type="group">
						<left>15</left>
						<top>15</top>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
				</itemlayout>
				<focusedlayout height="190" width="126">
					<control type="group">
						<control type="image">
							<width>113</width>
							<height>170</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[PosterThumb]</texture>
							<fadetime>400</fadetime>
							<bordertexture border="8">thumbs/thumbnail_focused.png
							</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<top>173</top>
							<width>113</width>
							<height>170</height>
							<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
							<texture background="true" flipy="true">$VAR[PosterThumb]</texture>
							<animation effect="fade" start="100" end="100" time="400">Focus</animation>
							<animation effect="fade" start="30" end="100" time="400">UnFocus</animation>
						</control>
						<control type="image">
							<left>78</left>
							<top>5</top>
							<width>34</width>
							<height>34</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>2</bordersize>
						</control>
						<control type="group">
							<left>15</left>
							<top>15</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			
			<control type="group">
				<top>855</top>	
				<left>-10</left>
				<width>1940</width>
				<height>70</height>
				<control type="image">
					<texture>black.png</texture>
					<colordiffuse>DDffffff</colordiffuse>
					<bordersize>2</bordersize>
				</control>
				<control type="grouplist">
					<align>center</align>
					<aligny>center</aligny>
					<itemgap>100</itemgap>
					<orientation>horizontal</orientation>
	
					<!-- Invisible labels so that the IsEmpty can be called on VARs -->
					<control type="label" id="9901">
						<label>$VAR[AspectRatio]</label>
						<visible>false</visible>
					</control>
					<control type="label" id="9902">
						<label>$VAR[AudioChannelCustom]</label>
						<visible>false</visible>
					</control>
					<control type="label" id="9903">
						<label>$VAR[SourceFlagVar]</label>
						<visible>false</visible>
					</control>
	
					<control type="image">
						<width>90</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>$INFO[ListItem.VideoResolution,flags/resolution/,.png]
						</texture>
						<visible>!IsEmpty(ListItem.VideoResolution)</visible>
					</control>
					<control type="image">
						<width>90</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
						<visible>!IsEmpty(ListItem.AudioCodec)</visible>
					</control>
					<control type="image">
						<width>90</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/channels/$VAR[AudioChannelCustom].png</texture>
						<visible>!IsEmpty(Control.GetLabel(9902))</visible>
					</control>
					<control type="image">
						<width>90</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>$VAR[SourceFlagVar,flags/video/,.png]</texture>
						<visible>!IsEmpty(Control.GetLabel(9903))</visible>
					</control>
					<control type="image">
						<width>90</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/aspectratio/$VAR[AspectRatio].png</texture>
						<visible>!IsEmpty(Control.GetLabel(9901))</visible>
					</control>
					<control type="image">
						<width>90</width>
						<colordiffuse>grey</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>flags/cc.png</texture>
						<visible>!IsEmpty(ListItem.SubtitleLanguage)</visible>
					</control>
				</control>
			</control>
			

			
		</control>
	</include>
</includes>
